<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- All logs go to file only (diagnostic purposes for developers) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>leadqualbot.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger: all logs to file only, no console pollution -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
